<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="co.metalab.asyncawaitsample">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MainApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity
            android:name="co.metalab.asyncawaitsample.MainActivity"
            android:label="@string/asyncactivity"
            android:taskAffinity="co.metalab.asyncawaitsample.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />


                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="co.metalab.asyncawaitsample.GitHubActivity" />

        <activity
            android:name="co.metalab.coroutinesample.CoroutineMainActivity"
            android:label="@string/coroutineactivity"
            android:taskAffinity="co.metalab.asyncawaitsample.CoroutineMainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="co.metalab.coroutinesample.KxGitHubActivity" />
    </application>

</manifest>